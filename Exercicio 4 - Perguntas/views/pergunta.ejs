<%- include('partials/header.ejs') %>
<body>
  <%- include('partials/navbar.ejs') %>
  <div class="container">
    <h1 class="mt-4 mb-1"><%= pergunta.titulo%></h1>
    <p class="mb-5"><%= pergunta.descricao%></p>
    <form method="POST" action="/salvarresposta">
      <h3>Responda</h3>
      <textarea placeholder="Digite sua resposta" class="form-control" name="corpo"> </textarea>
      <input type="hidden" value="<%= pergunta.id%>" name="pergunta" hidden>
      <button type="submit" class="btn btn-success float-right mt-3">Responder</button>
    </form>
    <h2 class="mt-4 mb-2">Respostas</h2>
    <% respostas.forEach(resposta =>{%>
        <p><%= resposta.corpo %></p>
    <% })%>
  </div>
</body>
<%- include('partials/footer.ejs') %>
